<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/bluebutton"
                android:endColor="@color/bluebutton"
                android:angle="270" />
            <stroke
                android:width="dp"
                android:color="@color/grey1" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="13dp"
                android:top="13dp"
                android:right="13dp"
                android:bottom="13dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/orange1"
                android:startColor="@color/orange2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey1" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="13dp"
                android:top="13dp"
                android:right="13dp"
                android:bottom="13dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/bluebutton"
                android:startColor="@color/bluebutton"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey1" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="13dp"
                android:top="13dp"
                android:right="13dp"
                android:bottom="13dp" />
        </shape>
    </item>
</selector>